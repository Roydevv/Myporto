{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.js", // <-- PERBAIKAN: Hanya bangun api/index.js
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js" // <-- PERBAIKAN: Arahkan semua ke api/index.js
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}